<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30">
    <Properties>
        <Property name="logpath">${ars-utils-home}</Property>
    </Properties>
    <Appenders>
        <RollingFile name="excel-parser" fileName="${logpath}/logger/Utils.log" filePattern="${logpath}/logger/Utils-%d{MM-dd-yyyy}.log">
            <DefaultRolloverStrategy max="10"/>
            <PatternLayout>
                <Pattern>[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB" />
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="report" level="DEBUG" additivity="false">
            <Appender-ref ref="Utils"/>
            <Appender-ref ref="file"/>
        </Logger>
        <Root level ="INFO">
            <Appender-ref ref="file"/>
            <Appender-ref ref="stdout"/>
        </Root>
    </Loggers>
</Configuration>